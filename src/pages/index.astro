<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->

  <Hero
    class:list={'mb-0'}
    actions={[
      {
        variant: 'primary',
        text: 'Visit Live Demo',
        href: 'https://rc-lha.rwi.uzh.ch/',
        target: '_blank',
        icon: 'tabler:external-link',
      },
      { text: 'Visit Gitlab Code Repo', href: '#features' },
